<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context="hakanyildiz.co.assingment3.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/arananKelime"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:hint="Enter some Text!"

            />
        <ImageButton
            android:background="@color/googleBlue"
            android:id="@+id/btnSearch"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/search" />
    </LinearLayout>



    <EditText
        android:editable="false"
        android:id="@+id/cikanKelime"
        android:gravity="top"
        android:text="DENEME"
        android:textColor="@color/blue"
        android:textSize="22dp"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <LinearLayout
        android:paddingTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:paddingBottom="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_welcome"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome : ....."/>
        <Button
            android:id="@+id/btnLogout"
            android:background="@color/googleBlue"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">
        <Button
            android:textColor="@color/white"
            android:background="@color/googleGreen"
            android:textSize="17dp"
            android:id="@+id/btnSwitch"
            android:text="EN > TR"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            />
        <Button
            android:textColor="@color/white"
            android:background="@color/googleRed"
            android:textSize="17dp"
            android:id="@+id/btnConfig"
            android:text="CONFIG"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
